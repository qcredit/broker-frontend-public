{% extends 'base.twig' %}
{% block title %}{{ post.meta_information.title }}{% endblock %}
{% block post_meta %}
    <meta name="description" content="{{ post.meta_information.description }}"/>
    <meta name="keywords" content="{{ post.meta_information.keywords }}">
{% endblock %}
{% block container %}
    <article class="row justify-content-md-center post-full">
      <div class="col-sm-12 col-md-10 date text-center">{{ post.date_formatted }} </div>
      <h1 class="col-sm-12 col-md-10 post-full-title text-center">{{ post.title }}</h1>
      <div class="col-sm-12 col-md-10 tags text-center text-uppercase">{% for tag in post.tags %}{% if tag.name|length > 0 %}<a href="tag/{{ tag.name }}">{{ tag.name }}</a>{% endif %}{% endfor %}</div>
      <div class="col-sm-12 post-content-separator text-center"><span></span></div>
      <div class="col-sm-12 col-md-10 col-lg-7 post-preview-lead font-italic">{{post.lead | raw }}</div>
      <div class="col-sm-12 col-md-10 post-full-image" style="background-image: url({{post.image}});"></div>
      <div class="col-sm-12 col-md-10 col-lg-7 post-full-content">{{ post.content | raw }}</div>
    </article>
{% endblock %}
