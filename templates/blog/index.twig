{% extends 'base.twig' %}
{% block title %}Blog{% endblock %}
{% block container %}
  <section class="blog-articles">
    {% for post in posts %}
      <article class="post-preview">
        <div class="post-preview-image" style="background-image: url({{post.image}});"></div>
        <div class="data text-center text-uppercase"><span class="date">{{ post.date_publish | date("d.m.Y") }} </span><span class="tags">{% for tag in post.tags %}{{ tag.name }}{% endfor %}</span></div>
        <h2 class="post-preview-title">{{post.title}}</h2>
        <p class="post-preview-lead">{{post.lead | raw }}</p>
        <a class="post-preview-link" href="{{post.slug}}">Read more</a>
      </article>
    {% endfor %}
  </section>
{% endblock %}
