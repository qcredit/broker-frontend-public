{% extends 'base.twig' %}
{% block title %}Blog{% endblock %}
{% block container %}
  <section class="blog-articles">
    {% for post in posts %}
      <article class="post-preview">
        <div class="post-preview-image" style="background-image: url({{post.image}});"></div>
        <div class="data text-uppercase"><span class="date">{{ post.date_publish | date("d.m.Y") }} </span>{% for tag in post.tags %}<span class="tags"><a href="tag/{{ tag.name }}">{{ tag.name }}</a>{% endfor %}</span></div>
        <h5 class="post-preview-title">{{ post.title }}</h5>
        <div class="post-preview-lead">{{ post.lead|striptags|length > 170 ? post.lead|raw|slice(0,170)|raw : post.lead|raw }}
{{ post.lead|striptags|length > 170 ? '...' : ''}}</div>
        <a class="post-preview-link" href="{{post.slug}}">Read more &#187;</a>
      </article>
    {% endfor %}
  </section>
{% endblock %}
