{% extends 'base.twig' %}
{% block title %}{% if user.email %}{{ user.email }}{% else %}New user{% endif %}{% endblock %}
{% block container %}
<form method="POST">
    <div class="row">
        <div class="col-sm-6 mx-auto">
            <div class="form-group">
                <input type="text" name="email" placeholder="Email" class="form-control" value="{{ user.email }}"/>
                {% if user.errors.email %}
                    <small class="form-text text-danger">{{ user.errors.email }}</small>
                {% endif %}
            </div>
            <div class="form-group">
                <select name="accessLevel">
                    {% for val,level in accessLevelList %}
                      <option value="{{ val }}">{{ level }}</option>
                    {% endfor %}
                </select>
                {% if partner.errors.status %}
                    <small class="form-text text-danger">{{ partner.errors.status }}</small>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 mx-auto">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
{% endblock %}